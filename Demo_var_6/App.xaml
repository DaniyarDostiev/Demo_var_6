<Application x:Class="Demo_var_6.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Demo_var_6"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#498C51"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="15"/>
        </Style>

        <Style x:Key="secondColorBackground">
            <Setter Property="ItemsControl.Background" Value="#76E383"></Setter>
        </Style>

        <Style x:Key="thirdColorBackground">
            <Setter Property="ItemsControl.Background" Value="#498C51"></Setter>
        </Style>
    </Application.Resources>
</Application>
